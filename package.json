{
  "name": "tabsidian",
  "version": "2.1.1",
  "description": "tabSidian cross-browser build and tooling",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "node scripts/clean.js",
    "build": "node scripts/build.js",
    "build:chrome": "TARGET_BROWSER=chrome node scripts/build.js",
    "build:firefox": "TARGET_BROWSER=firefox node scripts/build.js",
    "build:edge": "TARGET_BROWSER=edge node scripts/build.js",
    "build:safari": "TARGET_BROWSER=safari node scripts/build.js",
    "build:all": "node scripts/build.js --all",
    "test": "node --test",
    "test:compat": "node --test tests",
    "validate:manifests": "node scripts/validate-manifests.js",
    "ci": "npm run build:all && npm run validate:manifests && npm run test:compat"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "fs-extra": "^11.2.0",
    "rollup": "^3.29.4"
  }
}
