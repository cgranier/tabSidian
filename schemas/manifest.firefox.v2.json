{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tabSidian Firefox Manifest v2",
  "type": "object",
  "required": [
    "manifest_version",
    "name",
    "version",
    "background",
    "browser_action"
  ],
  "properties": {
    "manifest_version": {
      "const": 2
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+(\\.\\d+){1,3}$"
    },
    "icons": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "optional_permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "browser_action": {
      "type": "object",
      "required": ["default_title"],
      "properties": {
        "default_title": {
          "type": "string",
          "minLength": 1
        },
        "default_icon": {
          "type": ["string", "object"]
        }
      },
      "additionalProperties": true
    },
    "background": {
      "type": "object",
      "required": ["scripts"],
      "properties": {
        "scripts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "persistent": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "options_ui": {
      "type": "object",
      "required": ["page"],
      "properties": {
        "page": {
          "type": "string",
          "minLength": 1
        },
        "open_in_tab": {
          "type": "boolean"
        }
      }
    },
    "web_accessible_resources": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "browser_specific_settings": {
      "type": "object",
      "properties": {
        "gecko": {
          "type": "object",
          "required": ["id"],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "strict_min_version": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
