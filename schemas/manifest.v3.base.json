{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tabSidian WebExtension Manifest v3",
  "type": "object",
  "required": ["manifest_version", "name", "version", "background", "icons", "action"],
  "properties": {
    "manifest_version": {
      "const": 3
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+(\\.\\d+){1,3}$"
    },
    "icons": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[0-9]+$": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "required": ["default_title"],
      "properties": {
        "default_icon": {
          "type": ["string", "object"]
        },
        "default_title": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "options_ui": {
      "type": "object",
      "required": ["page"],
      "properties": {
        "page": { "type": "string", "minLength": 1 },
        "open_in_tab": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "background": {
      "type": "object",
      "required": ["service_worker"],
      "properties": {
        "service_worker": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "enum": ["module"]
        }
      },
      "additionalProperties": true
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "optional_permissions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "host_permissions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "browser_specific_settings": {
      "type": "object",
      "additionalProperties": true
    },
    "safari_web_extension_info": {
      "type": "object",
      "required": ["version", "display_name"],
      "properties": {
        "version": {
          "type": "string",
          "minLength": 1
        },
        "display_name": {
          "type": "string",
          "minLength": 1
        },
        "permissions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": true
    },
    "web_accessible_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["resources", "matches"],
        "properties": {
          "resources": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "matches": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
